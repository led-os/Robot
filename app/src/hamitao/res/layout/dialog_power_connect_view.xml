<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_battery_bg"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/rl_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/text_size_20"
        android:layout_marginRight="@dimen/text_size_80">

        <ImageView
            android:id="@+id/iv_battery_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_battery_charging" />

        <com.hamitao.kids.widgets.BatteryViewSelf
            android:id="@+id/battery_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_8_5"
            android:layout_marginTop="@dimen/text_size_19_5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_size_40"
            android:background="@drawable/bg_battery_lightning" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_battery_value"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/text_size_10"
        android:layout_marginTop="@dimen/text_size_10"
        style="@style/text_white_style"
        android:layout_toLeftOf="@+id/rl_battery"
        android:textSize="@dimen/text_size_50" />


</RelativeLayout>