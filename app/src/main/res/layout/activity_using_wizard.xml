<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginLeft="@dimen/text_size_6"
        android:layout_marginRight="@dimen/text_size_6"
        android:layout_marginTop="@dimen/text_size_40"
        android:layout_marginBottom="@dimen/text_size_20"
        android:fadingEdge="vertical">

        <com.hamitao.kids.view.AutoTextView
            android:id="@+id/tv_wizard"
            style="@style/text_style"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="16sp"/>
    </ScrollView>

</RelativeLayout>