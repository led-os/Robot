<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_40">

    <TextView
        android:id="@+id/tv_tree_children_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_size_6"
        android:layout_marginRight="@dimen/text_size_6"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/text_size_10"
        android:textSize="@dimen/text_size_18" />
</RelativeLayout>