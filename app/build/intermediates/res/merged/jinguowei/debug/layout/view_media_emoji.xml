<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_face"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_emoji"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_emoji_speak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/iv_eyes1"
        android:layout_width="@dimen/text_size_100"
        android:layout_height="@dimen/text_size_100"
        android:layout_marginLeft="@dimen/text_size_15"
        android:layout_marginTop="@dimen/text_size_50"
        android:background="@drawable/shap_eyes"
        android:clickable="true" />

    <ImageView
        android:id="@+id/iv_eyes2"
        android:layout_width="@dimen/text_size_100"
        android:layout_height="@dimen/text_size_100"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/text_size_15"
        android:layout_marginTop="@dimen/text_size_50"
        android:background="@drawable/shap_eyes" />

</RelativeLayout>