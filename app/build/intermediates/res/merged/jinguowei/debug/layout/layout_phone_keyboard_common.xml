<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/table_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_one"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_two"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_three"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_four"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_five"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_six"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_seven"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_eight"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_nine"
                    android:layout_marginRight="1dp"
                    style="@style/btn_input_amount_style_jgw"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_star"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="*" />

                <Button
                    android:id="@+id/btn_zero"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_pound"
                    style="@style/btn_input_amount_style_jgw"
                    android:layout_marginRight="1dp"
                    android:text="#" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_del"
            style="@style/btn2_input_amount_style_jgw"
            android:src="@drawable/icon_phonedelete_jgw" />

        <ImageButton
            android:id="@+id/btn_call"
            style="@style/btn2_input_amount_style_jgw"
            android:src="@drawable/icon_phone_jgw" />

    </LinearLayout>
</LinearLayout>