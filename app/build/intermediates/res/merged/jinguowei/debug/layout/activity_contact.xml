<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_45"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_customer"
                    style="@style/text_white_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_bg"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/icon_call_contact"
                    android:gravity="center"
                    android:paddingLeft="@dimen/text_size_15"
                    android:paddingRight="@dimen/text_size_15"
                    android:text="@string/func_contacts"
                    android:textSize="@dimen/text_size_25" />

                <RadioButton
                    android:id="@+id/rb_call_phone"
                    style="@style/text_white_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_bg"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/icon_call_dial"
                    android:gravity="center"
                    android:paddingLeft="@dimen/text_size_35"
                    android:paddingRight="@dimen/text_size_25"
                    android:text="@string/func_call_phone"
                    android:textSize="@dimen/text_size_25" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>