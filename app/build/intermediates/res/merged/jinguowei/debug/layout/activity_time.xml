<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/rl_auto_data_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_6"
        android:layout_marginTop="@dimen/text_size_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_data_time"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_22" />


        <ImageView
            android:id="@+id/btn_switch_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_size_6"
            android:background="@drawable/icon_turn_off"
            android:clickable="true"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_auto_data_time"
        android:layout_marginLeft="@dimen/text_size_6"
        android:layout_marginTop="@dimen/text_size_20"
        android:text="@string/alarm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22" />

</RelativeLayout>