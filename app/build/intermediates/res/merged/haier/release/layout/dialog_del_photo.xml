<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_photo_shadow">


    <RelativeLayout
        android:layout_width="@dimen/text_size_220"
        android:layout_height="@dimen/text_size_150"
        android:layout_centerInParent="true"
        android:background="@drawable/deletethebox">

        <ImageView
            android:id="@+id/iv_cat_paw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_24"
            android:layout_marginTop="@dimen/text_size_35"
            android:background="@drawable/icon_cat_spaw" />

        <TextView
            android:id="@+id/tv_hint"
            style="@style/text_style"
            android:textColor="@color/common_main_color"
            android:layout_marginLeft="@dimen/text_size_6"
            android:layout_marginTop="@dimen/text_size_18"
            android:layout_toRightOf="@+id/iv_cat_paw"
            android:text="@string/delect_sure"
            android:textSize="@dimen/text_size_20" />

        <TextView
            style="@style/text_style"
            android:textColor="@color/common_main_color"
            android:layout_below="@+id/tv_hint"
            android:layout_marginLeft="@dimen/text_size_6"
            android:layout_marginTop="@dimen/text_size_6"
            android:layout_toRightOf="@+id/iv_cat_paw"
            android:text="@string/selected_photos"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/btn_photo_del_cancal"
            style="@style/text_style"
            android:textColor="@color/common_main_color"
            android:layout_width="@dimen/text_size_110"
            android:layout_height="@dimen/text_size_50"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cancelbox"
            android:text="@string/cancel"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/btn_photo_del_comfirm"
            style="@style/text_style"
            android:textColor="@color/common_main_color"
            android:layout_width="@dimen/text_size_110"
            android:layout_height="@dimen/text_size_50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/deletebox"
            android:text="@string/delect"
            android:textSize="@dimen/text_size_20" />
    </RelativeLayout>

</RelativeLayout>