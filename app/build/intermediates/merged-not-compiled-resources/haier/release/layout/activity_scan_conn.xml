<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_bg"
    android:background="@drawable/bg2"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/text_size_15"
        android:layout_marginRight="@dimen/text_size_15"
        android:layout_marginTop="@dimen/text_size_45"
        android:lineSpacingExtra="5dp"
        style="@style/text_white_style"
        android:textSize="@dimen/text_size_22" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="@dimen/text_size_120"
        android:layout_height="@dimen/text_size_50"
        android:layout_below="@+id/tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_size_10"
        android:background="@drawable/shape_scan_conn"
        android:text="@string/scan_text"
        style="@style/text_white_style"
        android:textSize="@dimen/text_size_22" />

</RelativeLayout>