<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.0"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0">

            <!--<com.hamitao.framework.widgets.MarqueTextView-->
                <!--android:id="@+id/tv_key"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:background="@null"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textSize="25dp"-->
                <!--android:ellipsize="start"-->
                <!--android:marqueeRepeatLimit="marquee_forever"-->
                <!--android:singleLine="true"-->
                <!--android:drawableBottom="@drawable/line_keyboard"-->
                <!--android:hint="@string/p_input_psw"-->
                <!--android:textColor="@color/white"-->
                <!--android:textColorHint="@color/white"-->
                <!--/>-->

            <EditText
                android:id="@+id/et_key"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:layout_marginBottom="5dp"
                android:hint="@string/p_input_psw"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textCursorDrawable="@drawable/shape_wifi_psw_cursor"
                android:background="@null"
                android:drawableBottom="@drawable/line_keyboard"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.0"
            android:dividerHeight="10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_del"
            style="@style/style_keyboard_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:src="@drawable/icon_keyboarddelete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_change"
            style="@style/style_keyboard_bg">

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:ems="1"
                android:text="@string/letter"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_case"
            style="@style/style_keyboard_bg">

            <ImageView
                android:id="@+id/iv_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:src="@drawable/icon_lowercase" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_enter"
            style="@style/style_keyboard_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:src="@drawable/icon_keyboarddetermine" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>